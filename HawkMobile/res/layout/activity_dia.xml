<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#303030">
   
   <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#669900" 
            android:orientation="horizontal" 
            >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="@android:color/black"
            android:src="@drawable/logoselect"
            android:onClick="cierra" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingLeft="20dp"
        android:textColor="#ffffff"
        android:text="Horario"
        android:textAppearance="?android:attr/textAppearanceLarge" />
         

       </LinearLayout>
 
    
   
  <HorizontalScrollView
            android:layout_width="fill_parent"          
            android:layout_height="50dp"
            android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#e3e2e2"
            
            android:orientation="horizontal" 
            android:gravity="fill|fill_horizontal">

            <Button
                android:id="@+id/btnlunes"
                android:layout_width="120dp"
                android:layout_height="fill_parent"
                android:text="Lunes"
                android:background="@drawable/diaselect"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp"/>

            <Button
                android:id="@+id/btnmartes"
                android:layout_width="120dp"
                android:layout_height="fill_parent"
                android:text="Martes" 
                android:layout_marginLeft="0dp"
                 android:background="@drawable/diaselect"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp"/>

            <Button
                android:id="@+id/btnmiercoles"
                android:layout_width="120dp"
                android:layout_height="fill_parent"
                android:text="Miercoles" 
                android:layout_marginLeft="0dp"
                android:background="@drawable/diaselect"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp"/>

            <Button
                android:id="@+id/btnjueves"
                android:layout_width="120dp"
                android:layout_height="fill_parent"
                android:text="Jueves"
                android:background="@drawable/diaselect"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp" />

            <Button
                android:id="@+id/btnviernes"
                android:layout_width="120dp"
                android:layout_height="fill_parent"
                android:text="Viernes"
         android:background="@drawable/diaselect"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp" />
         

       </LinearLayout>
         </HorizontalScrollView>

  <ListView
      android:id="@+id/android:list"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingStart="5dp" >
  </ListView>

</LinearLayout>
